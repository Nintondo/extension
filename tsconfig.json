{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./src",
    "declaration": true,
    "rootDir": "./ts_src",
    "types": ["node"],
    "allowJs": false,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["build.ts"],
  "exclude": ["src/**/*", "node_modules/**/*"]
}
