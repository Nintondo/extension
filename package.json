{
  "name": "nintondo-extension",
  "version": "0.2.5.4",
  "private": true,
  "scripts": {
    "dev": "bun build.ts --watch",
    "fire": "bun build.ts --watch --firefox",
    "chrome": "bun build.ts",
    "firefox": "bun build.ts --firefox",
    "both": "rm -rf dist && bun build.ts --firefox && bun build.ts",
    "release": "rm -rf dist && bun build.ts --firefox -c && bun build.ts -c",
    "sourcemap": "bun build.ts --sourcemap"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@headlessui/react": "2.0.4",
    "@heroicons/react": "2.1.1",
    "@noble/hashes": "1.3.3",
    "bel-ord-utils": "^0.2.8",
    "belcoinjs-lib": "^0.1.2",
    "bellhdw": "^0.5.40",
    "bells-inscriber": "^0.2.1",
    "big.js": "6.2.1",
    "classnames": "2.5.1",
    "eth-rpc-errors": "4.0.3",
    "i18next": "23.7.16",
    "immer": "^10.1.1",
    "koa-compose": "4.1.0",
    "nintondo-bip39": "^1.0.0",
    "nintondo-browser-passworder": "^0.0.1",
    "nintondo-sdk": "^0.1.13",
    "qr-code-styling": "1.6.0-rc.1",
    "rc-progress": "4.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.49.3",
    "react-hot-toast": "2.4.1",
    "react-intersection-observer": "9.5.3",
    "react-loading-icons": "1.1.0",
    "react-router-dom": "6.21.1",
    "reflect-metadata": "0.2.1",
    "zustand": "4.5.4"
  },
  "devDependencies": {
    "@types/big.js": "^6.2.2",
    "@types/chrome": "^0.0.269",
