{
  "name": "nintondo-extension",
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "dev": "bun build.ts --watch",
    "fire": "bun build.ts --watch --firefox",
    "chrome": "bun build.ts",
    "firefox": "bun build.ts --firefox",
    "both": "rm -rf dist && bun build.ts --firefox && bun build.ts",
    "release": "rm -rf dist && bun build.ts --firefox -c && bun build.ts -c",
    "sourcemap": "bun build.ts --sourcemap"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@headlessui/react": "1.7.18",
    "@heroicons/react": "2.1.1",
    "nintondo-browser-passworder": "0.0.1",
    "@noble/hashes": "1.3.3",
    "bel-ord-utils": "0.1.7",
    "bellhdw": "0.5.16",
    "big.js": "6.2.1",
    "bip39": "3.1.0",
    "classnames": "2.5.1",
    "eth-rpc-errors": "4.0.3",
    "i18next": "23.7.16",
    "koa-compose": "4.1.0",
    "qr-code-styling": "1.6.0-rc.1",
    "rc-progress": "3.5.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.49.3",
    "react-hot-toast": "2.4.1",
    "react-intersection-observer": "9.5.3",
    "react-loading": "2.0.3",
    "react-router-dom": "6.21.1",
    "reflect-metadata": "0.2.1",
    "zustand": "4.4.7"
  },
  "devDependencies": {
    "@types/big.js": "6.2.2",
    "@types/chrome": "0.0.256",
    "@types/koa-compose": "3.2.8",
    "@types/node": "20.10.7",
    "@types/react": "18.2.47",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.18.1",
    "autoprefixer": "10.4.16",
    "bun-types": "1.0.21",
    "esbuild": "0.19.11",
    "esbuild-plugin-copy": "2.1.1",
    "esbuild-plugin-svg": "0.1.0",
    "esbuild-plugin-svgj": "1.0.3",
    "esbuild-plugin-wasm": "1.1.0",
    "esbuild-plugins-node-modules-polyfill": "1.6.1",
    "esbuild-sass-plugin": "2.16.1",
    "esbuild-svg": "1.0.3",
    "eslint": "8.56.0",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "postcss-modules": "6.0.0",
    "sass": "1.69.7",
    "sass-loader": "13.3.3",
    "svgo": "3.2.0",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  }
}
